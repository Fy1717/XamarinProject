<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteProjem.InsertPage">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Kişi Ekle">
                    <EntryCell Label="Ad" x:Name="txtName"></EntryCell>
                    <EntryCell Label="Soyad" x:Name="txtSurname"></EntryCell>
                    <ViewCell >
                        <Button Text="Ekle" Clicked="onInsert"></Button>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>